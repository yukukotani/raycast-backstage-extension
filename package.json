{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "people-directory",
  "title": "People Directory",
  "description": "A detailed employee directory for your company",
  "icon": "icon.png",
  "author": "thomas",
  "categories": [
    "Communication"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-people",
      "title": "Search People",
      "description": "Search employees of your company",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "type": "password",
      "name": "apiToken",
      "title": "API Token",
      "description": "API Token for Notion's API",
      "required": true
    },
    {
      "type": "textfield",
      "name": "databaseId",
      "title": "Database ID",
      "description": "Database ID of your People Directory",
      "required": true
    }
  ],
  "dependencies": {
    "@notionhq/client": "^2.2.15",
    "@raycast/api": "^1.79.1",
    "@raycast/utils": "^1.16.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.14.11",
    "@types/react": "18.3.3",
    "eslint": "^8",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
